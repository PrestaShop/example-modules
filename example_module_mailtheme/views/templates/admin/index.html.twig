{% extends '@PrestaShop/Admin/layout.html.twig' %}
{% trans_default_domain "Admin.Design.Feature" %}

{% block content %}
  {% block darkThemeFormBlock %}
    {{ form_start(darkThemeForm) }}
    <div class="card">
      <h3 class="card-header">
        {{ 'Dark Theme'|trans({}, 'Modules.ExampleModuleMailtheme') }}
      </h3>

      <div class="card-body">
        <div class="form-wrapper">
          {{ form_widget(darkThemeForm) }}
        </div>
      </div>

      <div class="card-footer">
        <a href="{{ path('admin_example_module_mailtheme_reset_default_settings') }}" class="btn btn-outline-secondary">
          {{ 'Reset default settings'|trans({}, 'Modules.ExampleModuleMailtheme') }}
        </a>
        <a href="{{ path('admin_example_module_mailtheme_generate') }}" class="btn btn-outline-secondary">
          {{ 'Generate Dark Theme emails'|trans({}, 'Modules.ExampleModuleMailtheme') }}
        </a>

        <div class="float-right">
          <button class="btn btn-primary float-right">
            {{ 'Save'|trans({}, 'Admin.Actions') }}
          </button>
        </div>
      </div>
    </div>
    {{ form_end(darkThemeForm) }}
  {% endblock %}
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('../modules/example_module_mailtheme/views/js/form.js') }}"></script>
{% endblock %}
